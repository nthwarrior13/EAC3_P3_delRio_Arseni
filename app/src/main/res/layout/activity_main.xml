<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/titol_simpsons"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/homer"
        android:layout_width="250dp"
        android:layout_height="333dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/homer_simpson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/donut"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/donut"
        android:onClick="playmp3"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ull"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/engranatge_blau"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="257dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/engranatge_blau"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/engranatge_vermell"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/engranatge_vermell"
        android:visibility="invisible"/>

    <ImageView
         android:id="@+id/engranatge_verd"
         android:layout_width="63dp"
         android:layout_height="63dp"
         android:layout_marginStart="318dp"
         android:layout_marginTop="79dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:src="@drawable/engranatge_verd"
         android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>